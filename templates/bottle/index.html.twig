{% extends 'base.html.twig' %}

{% block title %}Hello BottleController!
{% endblock %}

{% block body %}
	<thead>
		<th>Nom
		</th>
		<th>Anne
		</th>
		<th>Region
		</th>
		<th>Type
		</th>
		<th>Rangement
		</th>
		<th>
			Actions
		</th>
	</thead>
	<thead>
		{% for bottle in bottles%}
			<td>
				{{bottle.name}}
			</td>
			<td>{{bottle.year |date('Y')}}
			</td>
			<td>{{bottle.region}}
			</td>
			<td>{{bottle.type}}
			</td>
			<td>{{bottle.storage}}
			</td>
		</thead>
	{% endblock %}
</thead>
